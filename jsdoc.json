{
  "opts": {
    "destination": "./doc/",
    "recurse": true
  },
  "tags": {
    "dictionaries": ["jsdoc", "closure"]
  },
  "source": {
    "include": ["src/", "plugins/", "test/mock/"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "plugins": [
    "node_modules/jsdoc/plugins/markdown"
  ],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": false
  }
}
